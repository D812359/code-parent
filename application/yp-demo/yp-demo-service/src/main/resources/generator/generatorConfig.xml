<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <properties resource="./generator/config.properties"/>
    <context id="mysql" defaultModelType="hierarchical" targetRuntime="MyBatis3Simple">
        <property name="javaFileEncoding" value="UTF-8"/>
        <property name="javaFormatter" value="org.mybatis.generator.api.dom.DefaultJavaFormatter"/>
        <property name="xmlFormatter" value="org.mybatis.generator.api.dom.DefaultXmlFormatter"/>

        <plugin type="com.yunphant.data.plugin.YunphantMybatisPlugin"/>

        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="${db.driver.class}" connectionURL="${db.url}" userId="${db.username}"
                        password="${db.password}"/>

        <javaModelGenerator targetPackage="${basedir}.bean" targetProject="src/main/java">
            <property name="rootClass" value="com.yunphant.data.config.AbstractAuditInfo"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mapping" targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="${basedir}.dao.mapper" targetProject="src/main/java" type="XMLMAPPER"/>

        <table tableName="${table.name}"
               enableInsert="false"
               enableSelectByPrimaryKey="false"
               enableSelectByExample="true"
               enableUpdateByPrimaryKey="false"
               enableUpdateByExample="false"
               enableDeleteByPrimaryKey="false"
               enableDeleteByExample="false">
        </table>
    </context>
</generatorConfiguration>
